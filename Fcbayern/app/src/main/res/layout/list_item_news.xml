<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_item_h"
    android:padding="@dimen/news_item_padding"
    android:background="@drawable/list_item_bg"
    android:orientation="horizontal">

    <cn.fcbayern.android.util.image.RecyclingImageView
        android:id="@+id/image"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/news_item_image_w"
        android:scaleType="centerCrop"
        android:layout_height="56dp" />


    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:textSize="14sp"
            android:textColor="#444444"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <cn.fcbayern.android.common.ContentTextView
            android:id="@+id/content"
            android:layout_below="@+id/title"
            android:textSize="12sp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:textColor="#999999"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/time"
            android:text="12:30"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</LinearLayout>
