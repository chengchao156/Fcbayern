<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/app_bg"
    tools:context="cn.fcbayern.android.ui.ChanegPswActivity">

    <RelativeLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#951432">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/web_back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ic_back"
                android:text="返回"
                android:textColor="@color/textColorPrimary" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="430dp"
        android:layout_below="@+id/topView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="#cc000000"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/app_name"
            android:textColor="@color/textColorPrimary"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="FC Bayern Munchen"
            android:textColor="@color/textColorPrimary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etOldPsw"
            android:layout_width="289dp"
            android:layout_height="44dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/login_edittext_shape"
            android:gravity="center"
            android:hint=" 原密码"
            android:inputType="textPassword"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorPrimary" />

        <EditText
            android:id="@+id/etNewPsw"
            android:layout_width="289dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_edittext_shape"
            android:gravity="center"
            android:hint="新密码"
            android:inputType="textPassword"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorPrimary" />

        <EditText
            android:id="@+id/etReNewPsw"
            android:layout_width="289dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_edittext_shape"
            android:gravity="center"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorPrimary" />

        <Button
            android:id="@+id/bt_confirm"
            android:layout_width="289dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/commit_button_selector"
            android:text="确认修改"
            android:textColor="@color/textColorPrimary"
            android:textSize="17sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/topView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@mipmap/logo" />
</RelativeLayout>
